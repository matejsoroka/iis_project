{block content}
    <div class="row">
        <div class="col-12">
            <h1 n:block="title">{$event->course->name}</h1>
            <p>{$event->description|noescape}</p>
        </div>
        <div class="col-4">
            <h2>{$event->title}</h2>
            <p>{$event->date|date:'%d.%m.%Y'} {$event->time_from|date:'%H:%M'} - {$event->time_to|date:'%H:%M'}</p>
            <p>Max. bodov: {$event->points}</p>
            <p>Získané body: {$studentPoints}</p>
        </div>
        {if $files->fetchAll()}
        <div class="col-4">
            <h2>Súbory</h2>
            <table class="table" n:foreach="$files as $file">
                <tr>
                    <td><i class="fa fa-file"></i> <a href="/{$file->file->path}">{$file->file->name}</a></td>
                </tr>
            </table>
        </div>
        {/if}
        <div class="col-12">

        </div>
    </div>


{/block}